<Window x:Class="StripsClientWPFStripView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Strip Details" Height="350" Width="600">
    <Grid>
        <Label Content="Strip ID" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="txtStripId" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,10,0,0" Width="150"/>

        <Button Name="btnGetStrip" Content="Get Strip" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="270,10,0,0" Width="100" Click="btnGetStrip_Click"/>

        <Label Content="Titel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <TextBox Name="txtTitel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,50,0,0" Width="250" IsReadOnly="True"/>

        <Label Content="Nr" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0"/>
        <TextBox Name="txtNr" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,90,0,0" Width="250" IsReadOnly="True"/>

        <Label Content="Reeks" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0"/>
        <TextBox Name="txtReeks" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,130,0,0" Width="250" IsReadOnly="True"/>

        <Label Content="Uitgeverij" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,170,0,0"/>
        <TextBox Name="txtUitgeverij" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,170,0,0" Width="250" IsReadOnly="True"/>

        <Label Content="Auteurs" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,210,0,0"/>
        <TextBox Name="txtAuteurs" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,210,0,0" Width="250" Height="50" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
